    }

    h1 {
      color: #1e90ff;
      text-align: center;
      text-transform: uppercase;
      text-shadow: 2px 2px 5px gray;
    }

    .underline {
      text-decoration: underline;
      color: #ff4500;
      font-size: 24px;
    }

    .italic {
      font-style: italic;
      font-size: 20px;
      color: #008080;
    }

    .bold {
      font-weight: bold;
      font-size: 22px;
      color: #4b0082;
    }

    .spacing {
      letter-spacing: 5px;
      word-spacing: 15px;
      font-size: 18px;
    }

    .lineheight {
      line-height: 2;
      background-color: #ffffe0;
      padding: 10px;
      border-left: 4px solid #ffa500;
    }
  </style>
